{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*\\[\\s*$",
    "decreaseIndentPattern": "^\\s*\\].*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*\\[",
      "end": "^\\s*\\]"
    }
  },
  "wordPattern": "[a-zA-Z0-9_-]+",
  "onEnterRules": [
    {
      "beforeText": "^\\s*\\[.*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*\\].*$",
      "action": {
        "indent": "outdent"
      }
    }
  ]
}
